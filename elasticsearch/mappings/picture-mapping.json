{
  "settings": {
    "analysis": {
      "analyzer": {
        "text_analyzer": {
          "tokenizer": "ik_smart",
          "filter": ["lowercase"]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": { "type": "long" },
      "name": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "mix": {
            "type": "text",
            "analyzer": "text_analyzer"
          },
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "introduction": {
        "type": "text",
        "analyzer": "text_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "category": { "type": "keyword" },
      "tags": {
        "type": "text",
        "fields": {
          "ik": {
            "type": "text",
            "analyzer": "ik_smart"
          },
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "reviewStatus": { "type": "integer" },
      "spaceId": { "type": "long" },
      "createTime": {
        "type": "date",
        "format": "strict_date_time||strict_date_optional_time||epoch_millis"
      },
      "isDelete": { "type": "integer" }
    }
  }
}
